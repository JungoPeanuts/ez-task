
<div class = "row">
   
</div>

<!-- ROW 2 -->

<div class = "row">
    <div class="col-xs-3">
      <div class="col-sm-12" style="margin-top: -200px;">
            <img src="/12-large.jpg" height="200px" width="200px" class="rounded-img">
      </div>
      <div class="col-sm-12">
        <h3 style="font-weight: bold;"><%= params[:id] %></h3>
       
      <h5 style="color: #0084B4; font-size: 100%;"> Random post from the website!</h5>
       <h6 style = "font-size: 100%; opacity: 0.7;"> <% @rp = Post.offset(rand(Post.count)).first %>
        <%= @rp.content %> <br></br> by
        <%= User.find(@rp.user_id).username %> </h6>
       
      
      </div>
    </div>
   
   
   <div class = "col-xs-6">
         <%= render '/shared/post_form' %><br><br>
         <% for @p in @posts %>
        <div class="panel panel-default post-panel">
            <div class="panel-body row">
                
               <div class = "col-sm-1">
                  <img src = "/icon.png" class = "rounded-img" height = "25px" width = "25px" float = "left"></img>
                </div>
                
                <div class = "col-sm-11">
                       <p = "post-title"><span class = "post-owner"><%= User.find(@p.user_id).username %> </span>-
                       <span class = "post-creation"><%= @p.created_at.to_formatted_s(:short) %></p> </span>  
                        <p = "post-content"> <%= @p.content %></p>
                </div>
                
               <div class = "col-sm-12">
                   <p = "post-links"> 
                   <span class="glyphicon glyphicon-comment glyph" aria-hidden="true"></span>
                   <span class="glyphicon glyphicon-retweet glyph" aria-hidden="true"></span>
                   <span class="glyphicon glyphicon-heart   glyph" aria-hidden="true"></span>
                                  
                                  </p>
                </div>
                
  
        </div>
    </div>
       <% end %>
    
     <div class="panel panel-default post-panel">
            <div class="panel-body row">
              <div class = "col-sm-12">
                   <center><a href ="#top"><p class = "opacity: .7; color: grey;"> Back to Top 
                   <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a></center> </p>
                </div>
                
  
        </div>
    </div>
    
    </div>

     <div class="col-xs-3">
       
        <div class="panel panel-default">
          <div class="panel-body">
             <h5 style="color: grey; font-size: 125%;">Who to follow</h5>
            <% for @u in @toFollow do %>
               <p style="font-weight: bold; opacity: 0.85;" ><a href="/user/<%= @u.username %>"><%= @u.username %></a></p>
             <% end %>
             
          </div>
        </div>
         
         <div class="panel panel-default">
          <div class="panel-body">
             <h5 style="color: grey; font-size: 125%;">Support</h5>
              <a href="">#Trend #1</a><br>
                <span style="color: grey;">31k Posts</span><br><br>
              <a href="">#Trend #2</a><br>
                <span style="color: grey;">25k Posts</span><br><br>
              <a href="">#Trend #3</a><br>
                <span style="color: grey;">16k Posts</span><br><br>
          </div>
        </div>
    
    
    </div>


</div>

