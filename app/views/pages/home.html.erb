<div class="row">
    <div class="col-xs-3">
      
        <div class="panel panel-default">
          <div class="panel-image hide-panel-body">  
            <img src="/12-large.jpg" class="panel-image-preview">
          </div>
          <div class="panel-footer">
            <div class="row">
                <div class="col-sm-2"><img src="/logo.png" height="25px" width="25px" class="rounded-img home-avatar"></div>
                <div class="col-sm-10"><h4 style="text-align: center;"><%= current_user.username %></h4></div>
                <div class="col-sm-12" style="margin-top: 10px;">
                  <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">POSTS<br>
                    <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.posts.count %></h6>
                  </div>
                  <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">FOLLOWERS<br>
                 
                  </div>
                </div>
            </div>

          </div>
        </div>
        
         <div class="panel panel-default">
          <div class="panel-body">
             <h5 style="color: grey; font-size: 125%;">Trends</h5>
              <a href="">#Trend #1</a><br>
                <span style="color: grey;">31k Posts</span><br><br>
              <a href="">#Trend #2</a><br>
                <span style="color: grey;">25k Posts</span><br><br>
              <a href="">#Trend #3</a><br>
                <span style="color: grey;">16k Posts</span><br><br>
          </div>
        </div>
    </div>
     
     <div class = "col-xs-6">
         <%= render '/shared/post_form' %><br><br>
         
         <% for @p in @posts %>
        <div class="panel panel-default post-panel">
            <div class="panel-body row">
                
               <div class = "col-sm-1">
                  <img src = "/icon.png" class = "rounded-img" height = "25px" width = "25px" float = "left"></img>
                </div>
                
                <div class = "col-sm-11">
                       <p = "post-title"><span class = "post-owner"><%= User.find(@p.user_id).username %> </span>-
                       <span class = "post-creation"><%= @p.created_at.to_formatted_s(:short) %></p> </span>  
                        <p = "post-content"> <%= @p.content %></p>
                </div>
                
               <div class = "col-sm-12">
                   <p = "post-links"> 
                   <span class="glyphicon glyphicon-comment glyph" aria-hidden="true"></span>
                   <span class="glyphicon glyphicon-retweet glyph" aria-hidden="true"></span>
                   <span class="glyphicon glyphicon-heart   glyph" aria-hidden="true"></span>
                                  
                                  </p>
                </div>
                
  
        </div>
    </div>
       <% end %>
        <div class="panel panel-default post-panel">
            <div class="panel-body row">
              <div class = "col-sm-12">
                   <center><a href ="#top"><p class = "opacity: .7; color: grey;"> Back to Top 
                   <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a></center> </p>
                </div>
                
  
        </div>
    </div>

    </div>

</div>






